<Window x:Class="PresentationWPF.CategoryDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin danh mục"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#F9FAFB">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Thông tin danh mục"
                   FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10">
            <TextBlock Text="Tên danh mục:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtCategoryName" Margin="0,5,0,10"/>

            <TextBlock Text="Mô tả:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtDescription" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="80" Margin="0,0,10,0" Background="#28A745" Foreground="White"
                    Click="BtnSave_Click"/>
            <Button Content="Hủy" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
