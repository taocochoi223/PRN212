<Window x:Class="PresentationWPF.UserDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin người dùng" Height="450" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F0F2F5"
        WindowStyle="None">

    <Border CornerRadius="10" Background="White" Padding="20" BorderBrush="#ddd" BorderThickness="1">
        <StackPanel Margin="10">
            <TextBlock Text="Thông tin người dùng" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <TextBlock Text="Họ tên:" />
            <TextBox x:Name="txtFullName" Margin="0,5,0,10"/>

            <TextBlock Text="Email:" />
            <TextBox x:Name="txtEmail" Margin="0,5,0,10"/>

            <TextBlock Text="Số điện thoại:" />
            <TextBox x:Name="txtPhone" Margin="0,5,0,10"/>

            <TextBlock Text="Mật khẩu:" />
            <PasswordBox x:Name="txtPassword" Margin="0,5,0,10" />

            <TextBlock Text="Vai trò:" />
            <ComboBox x:Name="cbRole" Margin="0,5,0,20">
                <ComboBoxItem Content="Admin" />
                <ComboBoxItem Content="Customer" />
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Hủy" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click"/>
                <Button Content="Lưu" Width="80" Background="#007BFF" Foreground="White" Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
