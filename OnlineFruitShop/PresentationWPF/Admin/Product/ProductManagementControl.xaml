<UserControl x:Class="PresentationWPF.ProductManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PresentationWPF.Admin.Product"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F9FAFB">

    <UserControl.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Border Background="White" CornerRadius="12" Padding="20">
            <DockPanel LastChildFill="True">
                <TextBlock Text="🛒 Quản lý sản phẩm"
                       FontSize="24" FontWeight="Bold" Foreground="#333"
                       Margin="0,0,0,20"
                       DockPanel.Dock="Top" />

                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="📂 Danh mục:" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold" Foreground="#444" />

                    <ComboBox x:Name="cbCategoryFilter" Width="200" SelectionChanged="CbCategoryFilter_SelectionChanged" />

                    <Button Content="🌀 Xem tất cả"
                        Margin="10,0"
                        Background="#6C757D"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="BtnResetFilter_Click"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="➕ Thêm sản phẩm"
                            Background="#28A745"
                            Style="{StaticResource ActionButtonStyle}"
                            HorizontalAlignment="Right"
                            Click="BtnAddProduct_Click"/>
                    </StackPanel>
                </StackPanel>

                <DataGrid x:Name="dgProducts"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      RowHeight="40"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#F3F4F6"
                      ColumnHeaderHeight="40"
                      VerticalGridLinesBrush="#E5E7EB"
                      HorizontalGridLinesBrush="#E5E7EB">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="60"/>
                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName}" Width="*"/>
                        <DataGridTextColumn Header="Giá" Binding="{Binding Price}" Width="100" />
                        <DataGridTextColumn Header="Tồn kho" Binding="{Binding Stock}" Width="80"/>
                        <DataGridTemplateColumn Header="Ảnh" Width="80">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding ImageUrl}" Width="60" Height="60" Stretch="UniformToFill"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Danh mục" Binding="{Binding CategoryName}" Width="150"/>

                        <DataGridTemplateColumn Header="Hành động" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="✏ Sửa"
                                            Background="#007BFF"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Click="BtnEdit_Click"/>
                                        <Button Content="🗑 Xóa"
                                            Background="#DC3545"
                                            Style="{StaticResource ActionButtonStyle}"
                                            Click="BtnDelete_Click"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
