<UserControl x:Class="PresentationWPF.ReportControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Bộ lọc -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Từ ngày:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="dpFromDate" Width="130" Margin="0,0,10,0"/>
            <TextBlock Text="Đến ngày:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="dpToDate" Width="130" Margin="0,0,10,0"/>
            <Button Content="Tạo báo cáo" Click="BtnGenerateReport_Click"
                    Width="120" Height="30" Background="DarkCyan" Foreground="White"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgOrders" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                  IsReadOnly="True" Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã đơn" Binding="{Binding OrderId}" Width="*"/>
                <DataGridTextColumn Header="Ngày đặt" Binding="{Binding OrderDate}" Width="*"/>
                <DataGridTextColumn Header="Khách hàng" Binding="{Binding Customer}" Width="*"/>
                <DataGridTextColumn Header="Số mặt hàng" Binding="{Binding Items}" Width="*"/>
                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding Total}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Tổng kết -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="txtOrderCount" FontWeight="Bold" Margin="0,0,20,0"/>
            <TextBlock x:Name="txtTotalRevenue" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
