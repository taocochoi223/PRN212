<UserControl x:Class="PresentationWPF.OrderManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Quản lý đơn hàng" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
            <DataGrid x:Name="OrderDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                      SelectionChanged="OrderDataGrid_SelectionChanged" Height="350">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding OrderId}" Width="50"/>
                    <DataGridTextColumn Header="Khách hàng" Binding="{Binding User.FullName}" Width="200"/>
                    <DataGridTextColumn Header="Ngày đặt" Binding="{Binding OrderDate, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Xem chi tiết" Width="150" Height="30" Margin="0 10 0 0" Click="BtnViewDetails_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
