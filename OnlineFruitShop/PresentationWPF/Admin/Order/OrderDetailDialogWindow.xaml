<Window x:Class="PresentationWPF.OrderDetailDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết đơn hàng" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TxtCustomer" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="TxtDate" Margin="0 5"/>
            <TextBlock x:Name="TxtStatus" Margin="0 5"/>
            <TextBlock x:Name="TxtTotal" Margin="0 5" FontWeight="Bold"/>

            <DataGrid x:Name="OrderDetailGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="0 10 0 0" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sản phẩm" Binding="{Binding Product.ProductName}" Width="200"/>
                    <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding UnitPrice}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
