<Window x:Class="PresentationWPF.Admin.AdminDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#F3F4F6">

    <Window.Resources>
        <!-- Button style cho sidebar -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5,4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#374151"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1F2937">
            <StackPanel Margin="0,20,0,20">
                <!-- Logo + tên -->
                <TextBlock Text="🍊  Fruit Admin" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,0,0,30"/>

                <!-- Menu Buttons -->
                <Button Content="🛒  Quản lý sản phẩm" Style="{StaticResource SidebarButtonStyle}" Click="BtnManageProducts_Click"/>
                <Button Content="📂  Quản lý danh mục" Style="{StaticResource SidebarButtonStyle}" Click="BtnManageCategories_Click"/>
                <Button Content="👥  Quản lý người dùng" Style="{StaticResource SidebarButtonStyle}" Click="BtnManageUsers_Click"/>
                <Button Content="📦  Xem đơn hàng" Style="{StaticResource SidebarButtonStyle}" Click="BtnViewOrders_Click"/>
                <Button Content="📊  Báo cáo doanh thu" Style="{StaticResource SidebarButtonStyle}" Click="BtnViewReport_Click"/>

                <StackPanel VerticalAlignment="Bottom" Margin="0,40,0,0">
                    <Button Content="🚪  Đăng xuất" Style="{StaticResource SidebarButtonStyle}" Click="BtnLogout_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Background="#F9FAFB">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Background="White" LastChildFill="True" Margin="0,0,0,1">
                <TextBlock Text="Dashboard" FontSize="22" FontWeight="Bold" Foreground="#333" VerticalAlignment="Center" Margin="20,0"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                    <TextBlock Text="Admin" Foreground="#555" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Ellipse Width="32" Height="32" Fill="LightGray"/>
                </StackPanel>
            </DockPanel>

            <Border Grid.Row="1" Margin="20" Background="White" CornerRadius="10" Padding="20">
                <Grid x:Name="MainContentGrid">
                    <StackPanel x:Name="WelcomePanel">
                        <TextBlock Text="Chào mừng bạn đến với hệ thống quản lý trái cây!" 
                       FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10"/>
                        <TextBlock Text="Hãy chọn chức năng bên thanh menu để bắt đầu quản lý dữ liệu." 
                       FontSize="14" Foreground="#666"/>
                    </StackPanel>
                    <ContentControl x:Name="MainContentArea" Visibility="Collapsed"/>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
