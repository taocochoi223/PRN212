<Window x:Class="PresentationWPF.Auth.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quên mật khẩu" Height="460" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" >
            <StackPanel>
                <TextBlock Text="Đặt lại mật khẩu" FontSize="24" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Email -->
                <TextBlock Text="Email:" />
                <TextBox x:Name="txtEmail" Height="30" Margin="0,0,0,10"/>

                <!-- Gửi OTP -->
                <Button Content="Gửi mã OTP" Click="BtnSendOtp_Click"
                        Background="#007BFF" Foreground="White" Height="35"
                        FontWeight="Bold" Margin="0,0,0,15"/>

                <!-- OTP -->
                <TextBlock Text="Nhập mã OTP:" />
                <TextBox x:Name="txtOtp" Height="30" Margin="0,0,0,10"/>

                <!-- Mật khẩu mới -->
                <TextBlock Text="Mật khẩu mới:" />
                <PasswordBox x:Name="txtNewPassword" Height="30" Margin="0,0,0,10"/>

                <!-- Đặt lại mật khẩu -->
                <Button Content="Đặt lại mật khẩu" Click="BtnResetPassword_Click"
                        Background="#28A745" Foreground="White" Height="35"
                        FontWeight="Bold"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
