<Window x:Class="PresentationWPF.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="520" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9A27FF" Offset="0.0" />
            <GradientStop Color="#FFF94D3A" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Border Width="420" Height="460" CornerRadius="20"
                Background="White"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Register" FontSize="32"
                           FontWeight="Bold" Foreground="#212121"
                           HorizontalAlignment="Center" Margin="0,0,0,20" />

                <TextBlock Text="Full Name:" />
                <TextBox x:Name="txtFullName" Height="30" Margin="0,5,0,10" />

                <TextBlock Text="Email:" />
                <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10" />

                <TextBlock Text="Phone Number:" />
                <TextBox x:Name="txtPhoneNumber" Height="30" Margin="0,5,0,10" />

                <TextBlock Text="Password:" />
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0,5,0,10" />

                <TextBlock Text="Confirm Password:" />
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0,5,0,20" />

                <Button Content="Register" Width="150" Height="40"
                        HorizontalAlignment="Center"
                        Background="#28A745" Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"
                        Click="BtnRegister_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="Gray" />
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
