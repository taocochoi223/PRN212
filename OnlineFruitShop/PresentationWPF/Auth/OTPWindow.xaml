<Window x:Class="PresentationWPF.Auth.OTPWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xác thực OTP" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF9A27FF" Offset="0.0" />
            <GradientStop Color="#FFF94D3A" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Border Width="400" Height="300" CornerRadius="20"
                Background="White"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Padding="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Xác thực OTP" FontSize="28" 
                           FontWeight="Bold" Foreground="#212121" 
                           HorizontalAlignment="Center" Margin="0,0,0,20" />

                <TextBlock Text="Nhập mã OTP được gửi tới email của bạn:" 
                           Foreground="Gray" TextAlignment="Center" 
                           TextWrapping="Wrap" Margin="0,0,0,15" />

                <TextBox x:Name="txtOtp" Height="40" Width="200"
                         FontSize="18" MaxLength="6"
                         HorizontalAlignment="Center"
                         HorizontalContentAlignment="Center"
                         BorderBrush="#ccc" BorderThickness="1"
                         Margin="0,0,0,20" />

                <Button x:Name="BtnVerify" Content="Xác thực" Width="150" Height="40"
                        HorizontalAlignment="Center"
                        Background="#28A745" Foreground="White"
                        FontWeight="Bold" Click="BtnVerify_Click">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="6" ShadowDepth="0" Color="Gray" />
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
