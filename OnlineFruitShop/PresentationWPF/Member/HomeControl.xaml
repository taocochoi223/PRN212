<UserControl x:Class="PresentationWPF.Member.HomeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F8F9FA">

    <UserControl.Resources>
        <!-- Modern Product Card Style -->
        <Style x:Key="ModernProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.1" BlurRadius="10"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Hero Section Style -->
        <Style x:Key="HeroSectionStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF6B73" Offset="0"/>
                        <GradientStop Color="#FF8E53" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="40"/>
        </Style>

        <!-- Category Card Style -->
        <Style x:Key="CategoryCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E9ECEF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="50"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.08" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,30,0,20"/>
        </Style>

        <!-- Price Style -->
        <Style x:Key="PriceStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#E74C3C"/>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E74C3C"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#E74C3C"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="25"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add to Cart Button Style -->
        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#229954"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel>
            <!-- Modern Hero Section -->
            <Border Style="{StaticResource HeroSectionStyle}" Height="450">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Content -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="FOOD &amp; FRUITS"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Opacity="0.9"/>

                        <TextBlock FontSize="52" FontWeight="Bold" Foreground="White" Margin="0,15,0,0">
                            <Run Text="Organic" Foreground="#FFE5B4"/>
                            <LineBreak/>
                            <Run Text="Fresh Fruits"/>
                        </TextBlock>

                        <TextBlock Text="Chúng tôi cung cấp những loại trái cây tươi ngon nhất, được chọn lọc kỹ càng từ các nông trại hữu cơ uy tín."
                                   FontSize="16"
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Opacity="0.9"
                                   Margin="0,20,50,30"
                                   LineHeight="24"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="🛒 Mua ngay"
                                    Background="White"
                                    Foreground="#E74C3C"
                                    BorderThickness="0"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Padding="25,12"
                                    Margin="0,0,15,0"
                                    Click="ShopNow_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="25"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F8F9FA"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="📖 Tìm hiểu thêm"
                                    Background="Transparent"
                                    Foreground="White"
                                    BorderBrush="White"
                                    BorderThickness="2"
                                    FontWeight="SemiBold"
                                    FontSize="14"
                                    Padding="25,12">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="25"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="White"/>
                                                <Setter Property="Foreground" Value="#E74C3C"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Content - Modern Fruit Display -->
                    <Grid Grid.Column="1" Margin="20">
                        <!-- Background Circle -->
                        <Ellipse Fill="White" Opacity="0.15" Width="320" Height="320"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <!-- Fruit Emojis in Circle -->
                        <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="🍎" FontSize="45" Canvas.Left="-20" Canvas.Top="-80"/>
                            <TextBlock Text="🍊" FontSize="40" Canvas.Left="60" Canvas.Top="-60"/>
                            <TextBlock Text="🍌" FontSize="50" Canvas.Left="80" Canvas.Top="20"/>
                            <TextBlock Text="🥝" FontSize="35" Canvas.Left="30" Canvas.Top="80"/>
                            <TextBlock Text="🍇" FontSize="42" Canvas.Left="-60" Canvas.Top="60"/>
                            <TextBlock Text="🥭" FontSize="38" Canvas.Left="-80" Canvas.Top="-10"/>
                        </Canvas>
                    </Grid>
                </Grid>
            </Border>

            <!-- Modern Search Section -->
            <Border Background="White" Margin="40,40,40,20" CornerRadius="15" Padding="30">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="1" Opacity="0.08" BlurRadius="15"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="🔍 Tìm kiếm sản phẩm yêu thích"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <Border Background="#F8F9FA"
                            BorderBrush="#E9ECEF"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="20,15"
                            MaxWidth="500">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="txtSearch"
                                     Grid.Column="0"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     FontSize="16"
                                     VerticalAlignment="Center"
                                     TextChanged="txtSearch_TextChanged"/>

                            <TextBlock x:Name="txtPlaceholder"
                                       Grid.Column="0"
                                       Text="Nhập tên trái cây..."
                                       Foreground="#6C757D"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"/>

                            <Button Grid.Column="1"
                                    Content="🔍"
                                    Background="#E74C3C"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontSize="16"
                                    Width="40"
                                    Height="40"
                                    Click="SearchButton_Click">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="8">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#C0392B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Modern Categories Section -->
            <StackPanel Margin="40,20">
                <TextBlock Text="Danh mục sản phẩm"
                           Style="{StaticResource SectionTitleStyle}"/>

                <TextBlock Text="Khám phá các loại trái cây tươi ngon được phân loại theo từng danh mục"
                           FontSize="16"
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <WrapPanel x:Name="CategoriesPanel" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <!-- Categories will be loaded here -->
                </WrapPanel>
            </StackPanel>



            <!-- Modern All Products Section -->
            <StackPanel Margin="40,60,40,40">
                <TextBlock Text="Tất cả sản phẩm"
                           Style="{StaticResource SectionTitleStyle}"/>

                <TextBlock Text="Khám phá toàn bộ bộ sưu tập trái cây tươi ngon của chúng tôi"
                           FontSize="16"
                           Foreground="#6C757D"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <ItemsControl x:Name="AllProductsPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,40"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ModernProductCardStyle}" Width="280" Height="380">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="180"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Product Image -->
                                    <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="12,12,0,0">
                                        <Image Source="{Binding ImageUrl}"
                                               Stretch="UniformToFill"
                                               Margin="15"/>
                                    </Border>

                                    <!-- Product Info -->
                                    <StackPanel Grid.Row="1" Margin="18">
                                        <TextBlock Text="{Binding CategoryName}"
                                                   FontSize="11"
                                                   Foreground="#6C757D"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>

                                        <TextBlock Text="{Binding ProductName}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Foreground="#2C3E50"
                                                   Margin="0,0,0,8"/>

                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Price, StringFormat={}{0:N0}₫}"
                                                           Style="{StaticResource PriceStyle}"
                                                           FontSize="16"/>
                                                <TextBlock Text="{Binding Quantity, StringFormat={}Còn: {0}}"
                                                           Foreground="#6C757D"
                                                           FontSize="11"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="1"
                                                       Text="⭐ 4.5"
                                                       FontSize="12"
                                                       Foreground="#6C757D"
                                                       VerticalAlignment="Center"/>
                                        </Grid>

                                        <Button Content="🛒 Thêm vào giỏ"
                                                Style="{StaticResource AddToCartButtonStyle}"
                                                Click="AddToCart_Click"
                                                HorizontalAlignment="Stretch"
                                                FontSize="13"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Modern Footer -->
            <Border Background="#2C3E50" Margin="0,60,0,0" Padding="60,40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Company Info -->
                    <StackPanel Grid.Column="0" Margin="0,0,40,0">
                        <TextBlock Text="🍏 Fruit Shop"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Chúng tôi cam kết cung cấp những loại trái cây tươi ngon nhất, được chọn lọc kỹ càng từ các nông trại hữu cơ uy tín trên toàn quốc."
                                   Foreground="White"
                                   TextWrapping="Wrap"
                                   Opacity="0.8"
                                   LineHeight="22"
                                   Margin="0,0,0,20"/>

                        <StackPanel Orientation="Horizontal">
                            <Border Background="#E74C3C" CornerRadius="20" Padding="12,8" Margin="0,0,10,0">
                                <TextBlock Text="📞 0123-456-789" Foreground="White" FontSize="12"/>
                            </Border>
                            <Border Background="#27AE60" CornerRadius="20" Padding="12,8">
                                <TextBlock Text="✉️ info@fruitshop.vn" Foreground="White" FontSize="12"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>

                    <!-- Quick Links -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Liên kết nhanh"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="🏠 Trang chủ" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🛍️ Sản phẩm" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🛒 Giỏ hàng" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="📋 Đơn hàng" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Categories -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Danh mục"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="🍎 Trái cây tươi" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🥭 Trái cây nhiệt đới" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🍇 Trái cây nhập khẩu" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🥝 Trái cây hữu cơ" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Support -->
                    <StackPanel Grid.Column="3">
                        <TextBlock Text="Hỗ trợ"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="❓ Câu hỏi thường gặp" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🚚 Chính sách giao hàng" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="↩️ Chính sách đổi trả" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                        <TextBlock Text="🔒 Bảo mật thông tin" Foreground="White" Opacity="0.8" Margin="0,5" Cursor="Hand"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Copyright -->
            <Border Background="#1A252F" Padding="40,20">
                <Grid>
                    <TextBlock Text="© 2024 Fruit Shop. Tất cả quyền được bảo lưu."
                               Foreground="White"
                               Opacity="0.6"
                               HorizontalAlignment="Center"
                               FontSize="14"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
