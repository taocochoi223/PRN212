<Window x:Class="PresentationWPF.Member.OrderInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin người nhận" Height="250" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Tên người nhận:"/>
            <TextBox x:Name="txtReceiverName" Margin="0,5"/>

            <TextBlock Text="Số điện thoại:"/>
            <TextBox x:Name="txtPhone" Margin="0,5"/>

            <TextBlock Text="Địa chỉ giao hàng:"/>
            <TextBox x:Name="txtAddress" Margin="0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Hủy" Width="80" Click="Cancel_Click" Margin="0,0,10,0"/>
                <Button Content="Xác nhận" Width="100" Click="Confirm_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
