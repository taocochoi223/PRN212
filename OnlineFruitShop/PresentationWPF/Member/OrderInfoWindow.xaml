<Window x:Class="PresentationWPF.Member.OrderInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông tin giao hàng" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <Border Style="{StaticResource CardStyle}" Margin="20">
        <StackPanel>
            <!-- Header -->
            <TextBlock Text="📋 Thông tin giao hàng"
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Order Summary -->
            <Border Background="#E8F5E8"
                    BorderBrush="#27ae60"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="15"
                    Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="📦 Tóm tắt đơn hàng"
                               FontWeight="SemiBold"
                               FontSize="14"
                               Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Số lượng sản phẩm:" FontSize="13"/>
                        <TextBlock Grid.Column="1" x:Name="txtItemCount" FontWeight="SemiBold" FontSize="13"/>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Tổng tiền:" FontSize="14" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" x:Name="txtTotalAmount"
                                   FontWeight="Bold" FontSize="16" Foreground="#E74C3C"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Delivery Information Form -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Receiver Name -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="👤 Tên người nhận:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,15"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         x:Name="txtReceiverName"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Phone -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="📞 Số điện thoại:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,15"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         x:Name="txtPhone"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Address -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="📍 Địa chỉ giao hàng:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Top"
                           Margin="0,10,10,15"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         x:Name="txtAddress"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,15"/>

                <!-- Payment Method -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="💳 Phương thức:"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,20"/>
                <ComboBox Grid.Row="3" Grid.Column="1"
                          x:Name="cmbPaymentMethod"
                          Style="{StaticResource ModernTextBoxStyle}"
                          Margin="0,0,0,20">
                    <ComboBoxItem Content="💵 Thanh toán khi nhận hàng (COD)" IsSelected="True"/>
                    <ComboBoxItem Content="🏦 Chuyển khoản ngân hàng"/>
                    <ComboBoxItem Content="💳 Thẻ tín dụng/ghi nợ"/>
                </ComboBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="4" Grid.Column="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,10,0,0">
                    <Button Content="❌ Hủy bỏ"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Background="#6c757d"
                            Width="120"
                            Click="Cancel_Click"
                            Margin="0,0,15,0"/>
                    <Button Content="✅ Xác nhận đặt hàng"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="160"
                            Click="Confirm_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</Window>
