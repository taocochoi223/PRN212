<UserControl x:Class="PresentationWPF.Member.AccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PresentationWPF.Member"
             Background="White">
    <Grid>
        <Border Width="500" Padding="30" Background="WhiteSmoke" CornerRadius="10" 
                BorderBrush="#DDD" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" >

            <StackPanel>
                <TextBlock Text="Thông tin tài khoản"
                           FontSize="24" FontWeight="Bold"
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Họ tên (readonly) -->
                <TextBlock Text="Họ tên" FontWeight="SemiBold"/>
                <TextBox x:Name="txtFullName" IsReadOnly="True" Margin="0,5,0,15" 
                         Background="#f0f0f0" BorderBrush="#ccc"/>

                <!-- Email -->
                <TextBlock Text="Email" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" Margin="0,5,0,15" BorderBrush="#ccc"/>

                <!-- Số điện thoại -->
                <TextBlock Text="Số điện thoại" FontWeight="SemiBold"/>
                <TextBox x:Name="txtPhone" Margin="0,5,0,20" BorderBrush="#ccc"/>

                <!-- Nút cập nhật -->
                <Button Content="✔ Cập nhật"
        Click="UpdateButton_Click"
        Height="40" Background="#2ecc71" Foreground="White"
        FontWeight="Bold" FontSize="14" 
        BorderThickness="0" />

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
